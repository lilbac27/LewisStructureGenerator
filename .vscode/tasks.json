{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Project",
      "type": "shell",
      "command": "make",
      "options": {
        "cwd": "${workspaceFolder}/${input:project}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "detail": "Build a specific project's .8xp binary"
    },
    {
      "label": "Clean Project",
      "type": "shell",
      "command": "make clean",
      "options": {
        "cwd": "${workspaceFolder}/${input:project}"
      },
      "problemMatcher": []
    },
    {
      "label": "Build All",
      "type": "shell",
      "command": "for dir in */; do if [ -f \"$dir/Makefile\" ]; then echo \"=== Building $dir ===\"; make -C \"$dir\" || exit 1; fi; done",
      "group": "build",
      "problemMatcher": ["$gcc"],
      "detail": "Build all projects"
    },
    {
      "label": "Clean All",
      "type": "shell",
      "command": "for dir in */; do if [ -f \"$dir/Makefile\" ]; then make -C \"$dir\" clean; fi; done",
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "project",
      "type": "pickString",
      "description": "Which project to build?",
      "options": [
        "vsepr-table",
        "formula-sheet",
        "lewis-dot"
      ],
      "default": "formula-sheet"
    }
  ]
}
